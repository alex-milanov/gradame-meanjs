div.container-fluid(data-ng-controller="NavCtrl")
  div.navbar-header
    button.navbar-toggle(type="button",data-ng-click="toggleCollapsibleMenu()")
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a.navbar-brand(href="#")
      img(src="img/logo.png",alt="Grada.me")
  nav.collapse.navbar-collapse(data-ng-class="{in:isCollapsed}",role="navigation")
    ul.nav.navbar-nav.navbar-left
      li
        a(href="/") Начало
      li
        a(href="#/signals") Сигнали
      li
        a(href="#/signals/new") Подай сигнал
    ul.nav.navbar-nav.navbar-right(data-ng-hide="signedIn()")
      li
        a(href="#/login") Вход
      li
        a(href="#/register") Регистрация
    ul.nav.navbar-nav.navbar-right(data-ng-show="signedIn()")
      li
        a.avatar
          img(src="http://1.gravatar.com/avatar/{{ user.hash }}")
          span {{ user.full_name }}
      li
        a#login-btn(href="#/logout",data-ng-click="logout()") Изход